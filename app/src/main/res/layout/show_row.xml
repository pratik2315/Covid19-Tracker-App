<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:contentPadding="5dp"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp"
    app:cardBackgroundColor="@color/white"
    android:layout_marginBottom="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/countryTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country Name"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/countryTv">

            <TableRow android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Cases"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/casesTv"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:paddingStart="10dp"
                android:text="-"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            </TableRow>

            <TableRow android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Today Cases"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/todayCasesTv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingStart="10dp"
                    android:text="-"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

            </TableRow>
            <TableRow android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Deaths"
                    android:textSize="14sp"
                    android:textColor="#D82618"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/deathsTv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingStart="10dp"
                    android:text="-"
                    android:textSize="14sp"
                    android:textColor="#D82618"
                    android:textStyle="bold"/>

            </TableRow>
            <TableRow android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Today Deaths"
                    android:textSize="14sp"
                    android:textColor="#D82618"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/todayDeathsTv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingStart="10dp"
                    android:text="-"
                    android:textSize="14sp"
                    android:textColor="#D82618"
                    android:textStyle="bold"/>

            </TableRow>

            <TableRow android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Recovered"
                    android:textSize="14sp"
                    android:textColor="#46AA4A"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/recoveredTv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingStart="10dp"
                    android:text="-"
                    android:textSize="14sp"
                    android:textColor="#46AA4A"
                    android:textStyle="bold"/>

            </TableRow>

            <TableRow android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Today Recovered"
                    android:textSize="14sp"
                    android:textColor="#46AA4A"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_weight="1"
                    android:id="@+id/todayRecoveredTv"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingStart="10dp"
                    android:text="-"
                    android:textSize="14sp"
                    android:textColor="#46AA4A"
                    android:textStyle="bold"/>

            </TableRow>
        </TableLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>